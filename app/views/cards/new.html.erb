<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

<h1>New Card</h1>

<form action="/cards" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <label for="">Country</label>
  <input type="text" name="country" id="country_selector">

  <label for="">Title</label>
  <input type="text" name="title">

  <label for="">Image Url</label>
  <input type="text" name="image">

  <label for="">Source Url</label>
  <input type="text" name="source">

  <label for="">Tags</label>

    <input type="checkbox" name="food">Food
    <input type="checkbox" name="accommodation">Accommodation
    <input type="checkbox" name="transport">Transport
    <input type="checkbox" name="culture">Culture
    <input type="checkbox" name="entertainment">Entertainment
    <input type="checkbox" name="shopping">Shopping
    <input type="checkbox" name="nature">Nature
    <input type="checkbox" name="free">Free

  <p><input type="submit" value="Submit"></p>
</form>

<script type="text/javascript" src="/app/assets/javascripts/functions" >
